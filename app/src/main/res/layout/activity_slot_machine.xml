<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SlotMachineActivity">
    

    <TextSwitcher android:id="@+id/slot_text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="150dp"
                  android:paddingEnd="50dp"
                  android:paddingStart="50dp"
                  android:gravity="center"
                  android:textSize="30sp"
                  android:inAnimation="@anim/scroll_in"
                  android:outAnimation="@anim/scroll_out"
                  android:background="@color/slot_bg"/>
    
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_button"
            android:text="@string/start"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/slot_text"
            android:layout_marginTop="100dp"/>
</RelativeLayout>